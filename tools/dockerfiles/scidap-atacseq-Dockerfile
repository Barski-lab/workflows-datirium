FROM local/scidap-deseq:v0.0.51
LABEL maintainer="pavlvalera3301@gmail.com"
ENV DEBIAN_FRONTEND=noninteractive
RUN Rscript -e "if (!require(\"BiocManager\", quietly = TRUE)) install.packages(\"BiocManager\"); BiocManager::install(c(\"DiffBind\", \"ChIPseeker\", \"GenomicFeatures\", \"rtracklayer\", \"Rsamtools\"), update = FALSE, ask = FALSE); install.packages(c(\"VennDiagram\", \"UpSetR\", \"corrplot\"));"
COPY tools/dockerfiles/scripts/run_atac*.R /usr/local/bin/
COPY tools/dockerfiles/scripts/functions/ /usr/local/bin/functions/
RUN chmod +x /usr/local/bin/run_atac*.R && chmod -R +r /usr/local/bin/functions/
