cwlVersion: v1.0
class: CommandLineTool


requirements:
- class: InlineJavascriptRequirement


hints:
- class: DockerRequirement
  dockerPull: biowardrobe2/upsetr:v0.0.1


inputs:

  cluster_files:
    type: File[]
    inputBinding:
      prefix: "--clusters"
    doc: |
      Cellurar barcodes files clustered by genotype
      with Souporcell

  cluster_names:
    type: string[]
    inputBinding:
      prefix: "--aliases"
    doc: |
      Aliases for files provided in --clusters

  output_prefix:
    type: string?
    inputBinding:
      prefix: "--output"
    doc: |
      Output prefix. Default: ./overlap


outputs:

  upset_plot_png:
    type: File
    outputBinding:
      glob: "*.png"
    doc: "UpSet plot in PNG format"

  stdout_log:
    type: stdout

  stderr_log:
    type: stderr


baseCommand: ["souporcell_cluster_overlap.R"]

stdout: upset_stdout.log
stderr: upset_stderr.log


$namespaces:
  s: http://schema.org/

$schemas:
- https://github.com/schemaorg/schemaorg/raw/main/data/releases/11.01/schemaorg-current-http.rdf


label: "Souporcell Cluster Overlap"
s:name: "Souporcell Cluster Overlap"
s:alternateName: "Build upset plot for clustering results generated by multiple runs of Souporcell"

s:downloadUrl: https://raw.githubusercontent.com/Barski-lab/workflows/master/tools/souporcell-cluster-overlap.cwl
s:codeRepository: https://github.com/Barski-lab/workflows
